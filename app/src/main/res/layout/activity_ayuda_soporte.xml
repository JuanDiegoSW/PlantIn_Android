<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AyudaSoporte">

    <include layout="@layout/mitoolbar"
        android:id="@+id/mitoolbar">
    </include>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold|normal"
        android:textSize="30sp"
        android:text="¿Cómo podemos ayudarte?"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textStyle="normal"
        android:textSize="20sp"
        android:text="A continuación, te compartimos las dudas más/n frecuentes en cuanto al soporte académico y uso de la escuela. "/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="30dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="180sp"
            android:src="@drawable/focos"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="center"
        android:textStyle="normal"
        android:textSize="20sp"
        android:text="Para tener una mejor experiencia dentro de la escuela, te recomendamos echarle un vistazo a las preguntas más frecuentes sobre el uso de la escuela. "/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="30dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="180sp"
            android:src="@drawable/soporte"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>